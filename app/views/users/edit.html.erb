<h1>This is the edit users page</h1>


<%= form_with model: @user do |form| %>
  <div class="align-items-center">
    <div>
      <%= form.label :firstname %><br>
      <%= form.text_field :firstname, class: "form-control" %><br>
    </div>

    <div>
      <%= form.label :lastname %><br>
      <%= form.text_field :lastname, class: "form-control" %><br>
    </div>

    <div>
      <%= form.label :username %><br>
      <%= form.text_field :username, class: "form-control" %><br>
    </div>

    <div>
      <%= form.label :password %><br>
      <%= form.password_field :password, class: "form-control" %><br>
    </div>

    <div>
      <%= form.submit "Submit", class: "btn btn-success" %>
    </div>

    <div><br>
      <%= link_to 'Go Back', users_path, class: "btn btn-primary" %>
      <%= link_to "Delete User", user_path(@user), class: "btn btn-danger", data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'} %>
    </div>
  </div>
<% end %>

