<h1>Users list page</h1>
<h6>Current User: <%= current_user.username %></h6>

<table class="table table-striped table-bordered table-hover text-center">
  <thead class="thead-dark">
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Username</th>
      <th>Password</th>
      <th colspan="2">Functions</th>
    </tr>
  </thead>

  <tbody>
    <% @user.each do |user| %>
      <tr>
        <td><%= user.firstname %></td>
        <td><%= user.lastname %></td>
        <td><%= user.username %></td>
        <td ><%= user.password %></td>
        <td><%= link_to 'Edit', edit_user_path(user), class: "btn btn-success" %></td>
        <td><%= link_to "Delete", user_path(user),class: "btn btn-danger", data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'} %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<td><%= link_to 'Add New User', new_user_path, class: "btn btn-primary" %></td>
<%= link_to "Sign Out", signout_path, class: "btn btn-danger" %>